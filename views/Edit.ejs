    <form class="editProf" method="post" action="/edit" enctype="multipart/form-data">
        <div class="outEdit">
            <div class="photo">
            <% if(locals.Image == undefined){%>
            <img src="../images/profile.png" class="profileImg editImg"></img>
            <%} else { %>
            <img src="../userImages/userImg/<%=locals.Image%>" class="profileImg editImg"></img>
            <%} %>
            <input type="file" accept="image/*" name="image" id="imgId">
            <label for="imgId" class="file"><span class="material-symbols-outlined">
                add_a_photo
                </span>&nbsp; Add Photo </label>
            </input>
            </div>
            <div class="details">
                <label class="plab elab">Full Name:</label>
                <input class="pinp" name="userName" type="text" value="<%= locals.UserName %>">
                <label class="plab elab">Email:</label>
                <div style="display: flex; gap: 15px;"><input class="pinp"  type="email" value="<%= locals.email %>" readonly><% if(!locals.isVerified) { %><a href="/verifyemail" style="margin-left: -12px; color: rgb(223, 223, 236);  font-size: 15px; font-weight: 100;">verify</a><%} %></div>
                <label class="plab elab">Phone:</label>
                <input class="pinp" name="phone" type="text" value="<%= locals.Phone %>">
                <label class="plab elab">Password:</label>
                <input class="pinp" name="password" type="password" placeholder="Password">
                <a href="/changepass" class="pass">Change Password</a>
                <% if(locals.message) { %>
                    <div></div>
                    <p class="err"><%= locals.message %></p>
                <%} %>
            </div>
        </div>
        <div class="vbtn">
        <input type="submit" class="ebtn vbtn" value="Submit">
        <input type="button" class="ebtn vbtn" value="Delete Account" onclick="display_pop_up()">
        </div>
        </form> 

        <div class="blur" onclick="remove_pop_up()">
            <form method="post" action="/delAccount" class="pop_up f2">
